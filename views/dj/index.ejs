<!doctype html>
<html lang="en">
    <head>
        <meta charset="UTF-8" />
        <link rel="icon" type="image/png" href="https://img.icons8.com/external-kiranshastry-gradient-kiranshastry/64/external-headphones-communication-kiranshastry-gradient-kiranshastry.png" />
        <meta name="viewport" content="width=device-width, initial-scale=1.0" />
        <title>The HackerFlow Radio</title>
        <link rel="stylesheet" href="/css/group9.css">
        <link rel="stylesheet" href="/css/dj.css">
    </head>
    <body>
        <%- include('../partials/navbar.ejs') %>

        <div class="dj-body-wrapper">
            <div class="dj-title">
                <h1>DJ</h1>
            </div>
            <div class = "dropdown">
                <label for="time-slot"></label> 
                <select name="time-slot" id="time-slot"> 
                    <div class="dropdown-content">
                        <option disabled="disabled" selected="selected" value="choose" selected>Choose a time slot</option> 
                    </div>
                </select>
            </div>
            <div class="dj-song-body">
                <table>
                    <tr style="background-color: gray">
                        <th colspan="2" style="font-size: 20px;">Playlist</th>
                    </tr>
                    <tr>
                        <td> 
                            1
                        </td>
                        <td>Segment 1</td>
                    </tr>
                    <tr>
                        <td>
                           2
                        </td>
                        <td>Segment 2</td>
                    </tr>
                    <tr>
                        <td>
                           3
                        </td>
                        <td>Segment 3</td>
                    </tr>
                    <tr>
                        <td>
                            4
                        </td>
                        <td>Segment 4</td>
                    </tr>
                </table>
                <br>
                <button type="button"> <a href="/dj/search">Edit Playlist</a></button>
            </div>
        </div>
        <script src="/js/dj.js"></script>
    </body>
</html>